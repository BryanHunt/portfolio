{{#paper-card}}
  {{#paper-card-content}}
    <h3>Scale</h3>
    {{#paper-select item-label-callback=scaleDisplayName model=scaleName}}
      {{#paper-option value="scales/linear-scale"}}Linear{{/paper-option}}
      {{#paper-option value="scales/log-scale"}}Log{{/paper-option}}
      {{#paper-option value="scales/ordinal-scale"}}Ordinal{{/paper-option}}
      {{#paper-option value="scales/pow-scale"}}Pow{{/paper-option}}
      {{#paper-option value="scales/sqrt-scale"}}Sqrt{{/paper-option}}
    {{/paper-select}}
    {{component scaleName scale=scale}}
  {{/paper-card-content}}
{{/paper-card}}

{{#paper-card}}
  {{#paper-card-content}}
    <h3>Axis Options</h3>
    {{#paper-select placeholder="Orientation" model=orientation}}
      {{#paper-option value="bottom"}}bottom{{/paper-option}}
      {{#paper-option value="top"}}top{{/paper-option}}
      {{#paper-option value="left"}}left{{/paper-option}}
      {{#paper-option value="right"}}right{{/paper-option}}
    {{/paper-select}}

    Translate X: {{paper-slider flex=true min='10' max='400' value=translateX}}
    Translate Y: {{paper-slider flex=true min='20' max='400' value=translateY}}
  {{/paper-card-content}}
{{/paper-card}}

<br>
<h3>Template</h3>
<pre>
  \{{d3-axis class="axis" orientation="{{orientation}}" scale=scale transform="translate({{translateX}}, {{translateY}})"}}
</pre>

{{#paper-card}}
  {{#paper-card-content}}
    <h3>Result</h3>
    {{#d3-svg class="axis" width=600 height=600}}
      {{d3-axis class="x-axis" orientation=orientation scale=scale transform=axisTransform}}
    {{/d3-svg}}
  {{/paper-card-content}}
{{/paper-card}}
