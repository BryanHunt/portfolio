{{domain-list-input domainItems=domainItems}}
{{range-input rangeMin= rangeMin rangeMax=rangeMax}}

{{#paper-card}}
  {{#paper-card-content}}
    <h3>Options</h3>
    {{#paper-checkbox checked=rangeRound}}RangeRound{{/paper-checkbox}}
    {{#paper-checkbox checked=scale.clamp}}Clamp{{/paper-checkbox}}
  {{/paper-card-content}}
{{/paper-card}}

{{scale-input input=input scaledValue=scaledValue}}

<h3>Code</h3>
<pre>
  OrdinalScale.create({ domain: [{{domainList}}], rangePoints: [{{rangeMin}}, {{rangeMax}}]{{#if scale.clamp}}, clamp: true{{/if}} });
</pre>
